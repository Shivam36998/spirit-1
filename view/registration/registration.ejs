        <div class="registration">
            <div class="reg_layer">
                <div class="main">
                    <div class="form_content main_form">


                        <!-- <h4 class="intro_text">Register here</h4> -->

                        <div class="form">
                            <div class="logo">
                                <img src="/image/logo_dark.png" alt="spirit'23">
                            </div>
                            <h6>Sign up with credentials</h6>
                            <form method="post">
                                <div class="combined">
                                    <div class="form_elm">
                                        <label for="name">First Name</label>
                                        <input type="text" id="name" name="name" required="true">
                                    </div>
                                    <div class="form_elm">
                                        <label for="lname">Last Name</label>
                                        <input type="text" id="lname" name="lname" required="true">
                                    </div>

                                </div>

                                <div class="form_elm">
                                    <label for="email">Email id</label>
                                    <input type="email" name="email" autocomplete="off" id="email"
                                        placeholder="example@gmail.com" required>
                                </div>
                                <div class="form_elm">
                                    <label for="phone">Contact number</label>
                                    <input type="tel" name="phone" id="phone" required>
                                </div>
                                <div class="form_elm">
                                    <label for="college">College name</label>
                                    <select name="college" id="college" required>
                                        <option selected>Select</option>
                                        <!-- <option value="1">First</option> -->
                                        <option>Second</option>
                                        <option>Third</option>
                                        <option>Fourth</option>
                                        <option>Fifth</option>
                                        <option>M.Tech</option>
                                        <option>Ph.d</option>
                                        <option>Other</option>
                                    </select>
                                </div>
                                <div class="combined">
                                    <!-- hh -->
                                    <div class="form_elm">
                                        <label for="year">Year</label>
                                        <select name="year" id="year">
                                            <option selected>First</option>
                                            <!-- <option value="1">First</option> -->
                                            <option>Second</option>
                                            <option>Third</option>
                                            <option>Fourth</option>
                                            <option>Fifth</option>
                                            <option>M.Tech</option>
                                            <option>Ph.d</option>
                                            <option>Passout (or other)</option>
                                        </select>
                                    </div>
                                    <div class="form_elm">
                                        <label for="gender">Gender</label>
                                        <select name="gender" id="gender">
                                            <option selected>Male</option>
                                            <!-- <option value="Male">Male</option> -->
                                            <option>Female</option>
                                        </select>
                                    </div>

                                </div>


                                <div class="form_elm">
                                    <label for="city">City</label>
                                    <input type="text" name="city" id="city">
                                </div>
                                <div class="form_elm">
                                    <label for="password" autocomplete="current-password">Password<i
                                            class='bx bxs-low-vision' id="togglePassword"></i></label>
                                    <!-- <i class="fa-solid fa-eye" id="togglePassword"></i> -->
                                    <input type="password" name="password" id="password" minlength="8" required>

                                </div>
                                <div class="form_elm">
                                    <label for="cpassword" autocomplete="current-password">Confirm password</label>
                                    <!-- <i class="fa-solid fa-eye" id="togglePassword"></i> -->
                                    <input type="password" name="cpassword" id="cpassword" minlength="8" required>

                                </div>
                                
                                <div class="form_elm">
                                    <button type="submit" id="submit">Creat account</button>
                                    <h6>Already registered? <a href="/login">Click here</a> to login.</h6>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script src="/js/all.js"></script>
