        <% var messages %>
        <% var state %>
        <% if(state==true){%>
            <div class="error_box">
                <div class="err-msg-box">
                    <p class="err-msg t"><%- messages %></p>
                    <a  onclick="history.back()" type="button" class="btn btn-sm btn-success">Go somewhere</a>
                </div>
            </div>
        <% }else{ %>
            <div class="error_box">
                <div class="err-msg-box">
                    <h4>Oops!</h4>
                    <p class="err-msg f"><%- messages %></p>
                    <a type="button"  class="btn btn-sm btn-danger" onclick="history.back()">Go back</a>
                </div>
            </div>
    
        <% } %>

     
    
        
       
